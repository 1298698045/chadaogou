/* pages/component/swiper.wxss */
view.swiper{
    height: auto;
    overflow: hidden;
    position: relative;
}
view.swiper swiper swiper-item view{
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}
view.swiper swiper swiper-item view image{
    width: 100%;
    height: 100%;
}
view.swiper .dots{
    width: 100%;
    height: 11rpx;
    overflow: hidden;
    box-sizing: border-box;
    position: absolute;
    text-align: center;
    z-index: 100;
    left:0;
    bottom: 20rpx;
    display: flex;  
    justify-content: center; 
}
view.swiper .dots view{
    width: 10rpx;
    height: 11rpx;
    box-sizing: border-box;
    display: inline-block;
    background: #fff;
    margin: 0 6rpx;
    border-radius: 50%;
}
view.swiper .dots view.active{
    background: #307142;
}