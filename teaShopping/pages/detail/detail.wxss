@import "../component/swiper/swiper.wxss";
.container{
  height: auto;
  overflow: hidden;
}
.container .swiper{
  width: 100%;
  background: #fff;
}
.container .swiper .slide-image{
   width: 100%;
   height: 100%;
}
.swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.swiper .wx-swiper-dot{
    width:10rpx;
    display: inline-flex;
    height: 10rpx; 
    /* margin-left: 20rpx; */
    justify-content:space-between;
}
.swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
.swiper .wx-swiper-dot-active::before{
    background:rgba(48,113,66,255);    
}
.dwrap{
  height:auto;
  overflow:hidden;
  background:#fff;
  border-bottom:1px solid #dddee3;
  box-sizing:border-box;
  padding:30rpx;
}
.dwrap .title{
  display:flex;
  height:112rpx;
}
.dwrap .title .txt{
  flex:8;
  display:flex;
  align-items:center;
  height:auto;
  overflow:hidden;
  font-size:28rpx;
  line-height:30rpx;
   color:black; 
}
.dwrap .price{
  height:auto;
  overflow:hidden;
  display:flex;
  flex-direction:row;
  margin-top:20rpx;
  font-size: 24rpx;
}
.dwrap .price .jia{
  color: #666;
}
.dwrap .price .prs{
  color: red;
  margin-left: 20rpx;
}
.dBox {
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
  border-top: 1px solid #dddee3;
  padding-bottom: 100rpx;
}

.dBox .t {
  height: 88rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  background: #fff url(data:image/png;base64,) repeat-x bottom;
  background-size: auto 1px;
}

.dBox .t .item {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: center;
  box-sizing: border-box;
}

.dBox .t .item.on {
  color:#7bc267;
  /* border-bottom: 2px solid #307142; */
}
.dBox .txin{
  height:auto;
  overflow:hidden;
  background:#fff;
}
.dBox .txin .rich{
   word-wrap:break-word; 
}
.dBox .txin image{
  display: block;
}
.dBox .navcont{
  height:auto;
  overflow:hidden;
  margin-top:20rpx;
  border-top:1px solid #dddee3;
  border-bottom:1px solid #dddee3;
  padding-left:30rpx;
  box-sizing:border-box;
  background:#fff;
  padding-bottom: 100rpx;
}
.dBox .navcont .mido{
  min-height:86rpx;
  overflow:hidden;
  border-bottom:1px solid #dddee3;
  display:flex;
  flex-direction:row;
  font-size:24rpx;
  line-height:86rpx;
}
.dBox .navcont .mido .lef{
  overflow:hidden;
  display:inline-block;
  color:#666;
}
.dBox .navcont .mido .rig{
  height:auto;
  overflow:hidden;
  flex:1;
  color:#333;

}
.btn{
  width: 100%;
  height:100rpx;
  position: fixed;
  bottom:0;
  background: #ff5e2e;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx; 
}