<view class="container">
  <sw-iper></sw-iper>
  <view class="conWrap">
    <view class="tex">店铺名称</view>
    <view class="linewrap">
      <view class="ltxt">店铺所在地</view>
      <view class="rtxt">北京市 北京市 朝阳区</view>
    </view>
    <view class="linewrap">
      <view class="ltxt">店铺地址</view>
      <view class="rtxt">北京市朝阳区阜通西大街合生麒麟新天地8号楼1层底商8-8X的现身狼人杀俱乐部</view>
    </view>
    <view class="linewrap">
      <view class="ltxt">所售商品</view>
      <view class="rtxt">6种</view>
    </view>
  </view>
  <view class="classWrap">
    <view class="navtitle">
      <view class="center">所售商品</view>
    </view>
    <view class="listWrap">
      <view class="conBoxWrap">
        <view class="conBox" wx:for="{{classList}}" wx:key="{{idx}}" catchtap="goConbox">
          <view class="imgs">
            <image src="{{item.img}}" mode='scaleToFill'></image>
          </view>
          <view class="txt">
            {{item.title}}
          </view>
          <view class="price">
            ￥{{item.price}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="goShopBtn">进入店铺</view>
</view>