.container{
  width:100%;
  height: auto;
}
.container .conWrap{
  width:100%;
  padding: 0 30rpx;
  background: #fff;
  color:#333;
  font-size:24rpx;
}
.container .conWrap .tex{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.container .conWrap .text{
  padding: 10rpx 0;
}
.container .navbar {
    background: #fff;
    margin-top: 30rpx;
    display: flex;
}
.container .navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
    display: inline-block;
}
.container .navbar-text {
    white-space: nowrap;
    display: inline-block;
    /* width: 30px; */
    padding:20rpx 0;
    margin: auto;
}
.container .navbar-text.active {
    border-bottom: 2px solid #7BC267;
    color:#7BC267;
}

/*产品介绍  */
.container .product{
  width: 100%;
  overflow: hidden;
}
.container .product image{
  width: 100%;
  height: 300rpx;
}



/* 代表企业 */
.container .enterprise{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 30rpx;
}
 .container .enterprise .teoList{
  width:100%;
  background: #fff;
  overflow: hidden;
  border-top:1rpx solid #dddee3;
}
.container .enterprise .teoList .teowrap{
  width:90%;
  margin: 0 auto;
  overflow: hidden;
  padding:  30rpx 0;
}
.container .enterprise .teoList .teowrap .left{
  width:40%;
  text-align: center;
  float:left;
}
.container .enterprise .teoList .teowrap .left image{
  width:100%;
  height: 300rpx; 
  vertical-align: middle;

}
.container .enterprise .teoList .teowrap .right{
  width: 60%;
  float:left;
}
.container .enterprise .teoList .teowrap .right .h3{
  font-size: 30rpx;
  padding: 30rpx 0;
  color:#333;
  margin-top: 30rpx;
}
.container .enterprise .teoList .teowrap .right .span{
  font-size: 24rpx;
  color:#999;
  padding: 10rpx 0;
}




