.container{
  width:100%;
  height: auto;
  overflow: hidden;
}

.container  .conWrap {
  width: 100%;
  padding: 30rpx 30rpx;
  background: #fff;
  color: #333;
  font-size: 24rpx;
}
.container .conWrap .tex {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.container .conWrap .linewrap{
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
}
.container .conWrap .linewrap .ltxt{
  width: 20%;
  color:#ccc;
  float: left;
}
.container .conWrap .linewrap .rtxt{
  width: 70%;
  color:#333;
  float: left;
}
.container .btn{
  width:100%;
  padding: 25rpx 0;
  color:#fff;
  background: #ff5e2e;
  font-size: 28rpx;
  text-align: center;
  position: fixed;
  bottom:0;
  left:0;
}